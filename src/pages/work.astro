---
import { getCollection } from 'astro:content';

import BaseLayout from '../layouts/BaseLayout.astro';

import ContactCTA from '../components/ContactCTA.astro';
import PortfolioPreview from '../components/PortfolioPreview.astro';
import Hero from '../components/Hero.astro';
import Grid from '../components/Grid.astro';

const projects = (await getCollection('work')).sort(
  (a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf(),
);
---

<BaseLayout
  title="My Work | Juan Pablo Zamanillo"
  description="Explore my Model Context Protocol projects and revolutionary AI integration systems"
>
  <div class="stack gap-20">
    <main class="wrapper stack gap-8">
      <Hero
        title="My Work"
        tagline="Building the future of AI integration â€” where technology finally understands human workflow."
        align="start"
      />
      <Grid variant="offset">
        {projects.map((project) => (
          <li>
            <PortfolioPreview project={project} />
          </li>
        ))}
      </Grid>
    </main>
    <ContactCTA />
  </div>
</BaseLayout>
